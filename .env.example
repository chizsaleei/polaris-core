# =========================================================
# PREVIEW / STAGING and LOCAL
# Copy this file to .env.local when running locally.
# In Vercel, set the same keys in "Environment Variables"
# with "Preview" scope.
# =========================================================

# Public to browser (safe to expose)
# This is the URL of your Next.js web app, not the core API.
NEXT_PUBLIC_APP_BASE_URL=http://localhost:3000

# Supabase project URL and anon key
NEXT_PUBLIC_SUPABASE_URL=https://YOUR-STAGING-PROJECT.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_STAGING_ANON_KEY

# Optional version tag you can show in the UI
NEXT_PUBLIC_APP_VERSION=0.1.0

# Internal base URL of the core API itself
# Local development example:
APP_BASE_URL=http://localhost:8787

# Supabase (server side)
SUPABASE_URL=https://YOUR-STAGING-PROJECT.supabase.co
SUPABASE_SERVICE_ROLE_KEY=YOUR_STAGING_SERVICE_ROLE_KEY
SUPABASE_JWT_SECRET=YOUR_STAGING_JWT_SECRET

# Optional explicit port for polaris-core
PORT=8787

# Billing providers
# Leave as "paymongo,paypal" if you want both enabled.
BILLING_PROVIDER=paymongo,paypal

# PayMongo (preview)
PAYMONGO_SECRET_KEY=sk_test_xxx
PAYMONGO_PUBLIC_KEY=pk_test_xxx
PAYMONGO_WEBHOOK_SECRET=whsec_xxx

# PayPal (preview)
PAYPAL_CLIENT_ID=YOUR_PAYPAL_SANDBOX_CLIENT_ID
PAYPAL_CLIENT_SECRET=YOUR_PAYPAL_SANDBOX_CLIENT_SECRET
PAYPAL_MODE=sandbox
PAYPAL_WEBHOOK_ID=YOUR_PAYPAL_SANDBOX_WEBHOOK_ID

# KV and Redis (optional, only if you have them configured)
POLARIS_REST_API_KV_URL=redis://YOUR_STAGING_KV_URL
POLARIS_REST_API_KV_REST_API_URL=https://YOUR_STAGING_KV_REST_URL
POLARIS_REST_API_KV_REST_API_TOKEN=YOUR_STAGING_KV_REST_TOKEN
POLARIS_REST_API_KV_REST_API_READ_ONLY_TOKEN=
POLARIS_REST_API_REDIS_URL=redis://YOUR_STAGING_REDIS_URL

# OpenAI
OPENAI_API_KEY=YOUR_OPENAI_STAGING_KEY

# Recommended model mapping by function
# Main chat and content generation (Polaris coaches etc.)
OPENAI_CHAT_MODEL=gpt-4.1-mini

# Embeddings for search and "one more like this"
OPENAI_EMBED_MODEL=text-embedding-3-large

# Text to speech for coach voices
OPENAI_TTS_MODEL=tts-1

# Speech to text for recordings
OPENAI_TRANSCRIBE_MODEL=gpt-4o-mini-transcribe

# Moderation and safety checks
OPENAI_MODERATION_MODEL=omni-moderation-latest

# Realtime voice agent model (for websocket / Live)
OPENAI_REALTIME_MODEL=gpt-realtime


# =========================================================
