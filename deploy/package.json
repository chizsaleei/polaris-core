{
  "name": "polaris-core",
  "version": "0.1.0",
  "description": "Server for Polaris Coach: auth, practice API, analytics, billing (PayMongo/PayPal), and cron jobs.",
  "private": true,
  "license": "BUSL-1.1",
  "engines": {
    "node": ">=20.17.0 <21"
  },
  "packageManager": "npm@10.9.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/chizsaleei/polaris-core.git"
  },
  "bugs": {
    "url": "https://github.com/chizsaleei/polaris-core/issues"
  },
  "homepage": "https://github.com/chizsaleei/polaris-core#readme",
  "main": "dist/server/index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "set DOTENV_CONFIG_PATH=.env.local && node -r dotenv/config node_modules/tsx/dist/cli.mjs watch src/server/index.ts",
    "start": "node dist/server/index.js",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit",
    "cron:weekly": "tsx -r dotenv/config src/server/cron/weekly-summary.ts",
    "cron:reconcile": "tsx -r dotenv/config src/server/cron/reconcile-ledger.ts",
    "cron:refresh": "tsx -r dotenv/config src/server/cron/refresh-views.ts",
    "cron:drip": "tsx -r dotenv/config src/server/cron/drip-dispatch.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "echo \"No tests yet\" && exit 0",
    "check": "npm run lint && npm run typecheck && npm run build"
  },
  "dependencies": {
    "@paypal/paypal-server-sdk": "^1.0.0",
    "@supabase/supabase-js": "2.79.0",
    "axios": "^1.7.7",
    "cors": "2.8.5",
    "dotenv": "16.6.1",
    "express": "4.21.2",
    "express-rate-limit": "7.5.1",
    "uuid": "9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@types/cors": "2.8.19",
    "@types/express": "4.17.25",
    "@types/node": "20.19.24",
    "eslint": "9.39.1",
    "eslint-config-prettier": "9.1.2",
    "prettier": "^3.3.3",
    "tslib": "^2.7.0",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.3"
  },
  "prettier": {
    "$schema": "https://json.schemastore.org/prettierrc",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 100,
    "tabWidth": 2,
    "arrowParens": "always"
  }
}
