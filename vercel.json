{
  "version": 2,
  "installCommand": "npm ci",
  "buildCommand": "npm run build",
  "functions": {
    "api/**.ts": {
      "runtime": "nodejs20.x",
      "memory": 1024,
      "maxDuration": 30
    },
    "api/**.js": {
      "runtime": "nodejs20.x",
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "routes": [
    { "src": "/health", "dest": "/api/server" },
    { "src": "/version", "dest": "/api/server" },
    { "src": "/api/(.*)", "dest": "/api/server" }
  ],
  "cleanUrls": true
}
